{
    "swagger": "2.0",
    "info": {
        "description": "This microservice send the emails for you.",
        "title": "goLembrar email service",
        "contact": {},
        "version": "1.0"
    },
    "host": "https://sendemail.golembrar.com",
    "basePath": "/v1",
    "paths": {
        "/send-email": {
            "post": {
                "description": "Get the info and send email for now",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "email"
                ],
                "summary": "Send email",
                "responses": {
                    "200": {
                        "description": "OK",
                        "schema": {
                            "$ref": "#/definitions/email.EmailParams"
                        }
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.APIError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "email.EmailParams": {
            "type": "object",
            "required": [
                "html",
                "subject",
                "to"
            ],
            "properties": {
                "bcc": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "cc": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "html": {
                    "type": "string",
                    "maxLength": 500
                },
                "replyTo": {
                    "type": "string",
                    "maxLength": 100
                },
                "subject": {
                    "type": "string",
                    "maxLength": 120
                },
                "to": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "swagger.APIError": {
            "type": "object",
            "properties": {
                "errorCode": {
                    "type": "integer"
                },
                "errorMessage": {
                    "type": "string"
                }
            }
        }
    }
}