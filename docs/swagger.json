{
    "swagger": "2.0",
    "info": {
        "description": "This microservice send the emails for you.",
        "title": "goLembrar email service",
        "contact": {},
        "version": "1.0"
    },
    "host": "https://sendemail.golembrar.com",
    "basePath": "/v1",
    "paths": {
        "/send-email": {
            "post": {
                "description": "Take the info and send email for you",
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "email"
                ],
                "summary": "Send email",
                "parameters": [
                    {
                        "description": "Email parameters",
                        "name": "Body",
                        "in": "body",
                        "required": true,
                        "schema": {
                            "$ref": "#/definitions/email.EmailParams"
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "400": {
                        "description": "Bad Request",
                        "schema": {
                            "$ref": "#/definitions/swagger.APIError"
                        }
                    }
                }
            }
        }
    },
    "definitions": {
        "email.EmailParams": {
            "type": "object",
            "required": [
                "html",
                "owner",
                "subject",
                "to"
            ],
            "properties": {
                "html": {
                    "type": "string",
                    "maxLength": 500,
                    "example": "\u003cp\u003eMessage description\u003c/p\u003e"
                },
                "owner": {
                    "type": "string",
                    "example": "maria@gmail.com"
                },
                "subject": {
                    "type": "string",
                    "maxLength": 120,
                    "example": "The message title"
                },
                "to": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "example": [
                        "joaozinho@gmail.com"
                    ]
                }
            }
        },
        "swagger.APIError": {
            "type": "object",
            "properties": {
                "errorCode": {
                    "type": "integer"
                },
                "errorMessage": {
                    "type": "string"
                }
            }
        }
    }
}